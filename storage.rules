rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Videos - authenticated users can upload to their own folder
    match /videos/{userId}/{allPaths=**} {
      // Users can read all videos (public access)
      allow read: if true;
      
      // Users can write to their own folder (upload videos)
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 200 * 1024 * 1024 && // 200MB max
                     request.resource.contentType.matches('video/.*');
      
      // Users can delete their own videos
      allow delete: if request.auth != null && 
                      request.auth.uid == userId;
    }
    
    // Images - authenticated users can upload
    match /images/{allPaths=**} {
      // Users can read all images (public access)
      allow read: if true;
      
      // Authenticated users can upload images
      allow write: if request.auth != null &&
                     request.resource.size < 10 * 1024 * 1024 && // 10MB max
                     request.resource.contentType.matches('image/.*');
      
      // Users can delete their own images
      allow delete: if request.auth != null;
    }
    
    // Property images - agents can upload
    match /properties/{allPaths=**} {
      // Everyone can read property images
      allow read: if true;
      
      // Authenticated users can upload property images
      allow write: if request.auth != null &&
                     request.resource.size < 10 * 1024 * 1024 && // 10MB max
                     request.resource.contentType.matches('image/.*');
      
      // Users can delete their own uploads
      allow delete: if request.auth != null;
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
