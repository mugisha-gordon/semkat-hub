rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isBootstrapAdmin() {
      return request.auth != null &&
             request.auth.token.email != null &&
             request.auth.token.email == 'adminsemkat@gmail.com';
    }

    // Public reads for media
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null &&
                   request.auth.uid == userId &&
                   request.resource.size < 50 * 1024 * 1024 &&
                   request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && (request.auth.uid == userId || isBootstrapAdmin());
    }

    match /properties/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null &&
                   request.resource.size < 50 * 1024 * 1024 &&
                   request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null;
    }

    match /videos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null &&
                   request.auth.uid == userId &&
                   request.resource.size < 200 * 1024 * 1024 &&
                   request.resource.contentType.matches('video/.*');
      allow delete: if request.auth != null && (request.auth.uid == userId || isBootstrapAdmin());
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
